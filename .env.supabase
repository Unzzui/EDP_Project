# Configuración de Supabase (Migración completa de Google Sheets)
DATA_BACKEND=supabase
DATABASE_TYPE=postgresql

# Variables de Supabase (configurar con tus valores reales)
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu_anon_key_aqui
SUPABASE_SERVICE_ROLE_KEY=tu_service_role_key_aqui

# Para usar PostgreSQL de Supabase (opcional, se puede usar solo REST API)
DATABASE_URL=postgresql://postgres:password@db.supabase.co:5432/postgres

# Mantener variables existentes
FLASK_ENV=development
SECRET_KEY=tu_secret_key_aqui
DEBUG=True

# Redis para cache (opcional)
REDIS_URL=redis://localhost:6379/0

# Variables de Google Sheets (ya no necesarias, pero mantenidas para retrocompatibilidad)
# SHEET_ID=
# GOOGLE_CREDENTIALS_FILE=

# Desactivar Google Sheets (comentar para reactivar si es necesario)
# DATA_BACKEND=google_sheets